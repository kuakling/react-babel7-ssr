body {
  padding: 0;
  margin: 0;
}
.container{
  padding: 15px;
}

.btn {
  background-color: #9370db;
  padding: 10px;
  border: #ba55d3 1px solid;
  color: #fff;
}

.main-nav ul {
  list-style: none;
  background-color: #444;
  text-align: center;
  padding: 0;
  margin: 0;
}
.main-nav li {
  line-height: 40px;
  height: 40px;
  border-bottom: 1px solid #888;
}
 
.main-nav a {
  text-decoration: none;
  color: #fff;
  display: block;
  transition: .3s background-color;
}
 
.main-nav a:hover {
  background-color: #005f5f;
}
 
.main-nav a.active {
  background-color: #fff;
  color: #444;
  cursor: default;
}
 
@media screen and (min-width: 600px) {
  .main-nav li {
    width: 120px;
    border-bottom: none;
    height: 50px;
    line-height: 50px;
  }
 
  /* Option 1 - Display Inline */
  .main-nav li {
    display: inline-block;
    margin-right: -4px;
  }
 
